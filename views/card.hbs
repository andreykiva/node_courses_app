<h1>{{title}}</h1>

<div class="card-wrapper">
    {{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{_id}}" data-csrf="{{@root.csrf}}">Удалить</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p><strong>Общая стоимость: </strong><span class="price total-cost">{{price}}</span></p>
    <form action="/orders" method="POST">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button type="submit" class="btn">Сделать заказ</button>
    </form>
    {{else}}
    <p>Корзина пуста</p>
    {{/if}}
</div>